{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "outDir": "es"
  },
  "include": ["lib/**/*.ts", "react.ts", "helper.ts", "utils.ts"],
  "exclude": ["scripts", "test"],
  "compileOnSave": true
}
